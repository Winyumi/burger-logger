<h1>Burgers</h1>

<img src="/assets/images/burger.png" alt="Burger">

<h2>Menu</h2>

<ul>
{{#each burgers}}
    {{#unless devoured}}
        <li>
            {{ id }}. {{ burger_name }}<br>
            <button class="devour" data-id="{{ id }}">Devour it!</button>
        </li>
    {{/unless}}
{{/each}}
</ul>

<h2>Devoured</h2>

<ul>
{{#each burgers}}
    {{#if devoured}}
        <li>
            {{ id }}. {{ burger_name }}
        </li>
    {{/if}}
{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="add-burger">
    <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>
